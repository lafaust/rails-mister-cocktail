<div class="container">

  <div class="row justify-content-center">
    <div class="col-12">

      <h1> <%= @cocktail.name %> </h1>
        <br>
        <div class="d-dflex justify-content-center">
          <div>
            <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
          </div>
          <br>
          <div>
            <h2>Ingredients</h2>
            <!-- Un cocktail has many doses, donc: -->
            <% @cocktail.doses.each do |dose| %>
              <ul class="ingredients">
                <!-- Une dose belongs to un ingredient, et une dose a une description, donc: -->
                <li><%= dose.ingredient.name %> : <%= dose.description %>
                  <%= link_to "delete", dose_path(dose),
                  # method : il s'agit du VERB, donc DELETE:
                   method: :delete,
                   data: { confirm: "Are you sure?" } %>
                </li>
              </ul>
            <% end %>
            <p><%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-primary"  %></p>
          </div>
        </div>
      <br>
      <p><%= link_to "back to index", cocktails_path %></p>

    </div>
  </div>
</div>

